{
  "name": "academic-reference-manager",
  "version": "1.0.0",
  "description": "An API project for the course Software Architecture and Implementation",
  "main": "src/app.js",
  "scripts": {
    "test": "env NODE_ENV=test jest --runInBand --detectOpenHandles",
    "test:coverage": "env NODE_ENV=test jest --runInBand --coverage --detectOpenHandles",
    "start": "nodemon src/app.js",
    "production": "env NODE_ENV=production node src/app.js",
    "initDevData": "env NODE_ENV=development node src/db/initFromData",
    "initProductionData": "env NODE_ENV=production node src/db/initFromData"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HonnDJG/Academic-Reference-Manager.git"
  },
  "author": "Daníel Ekaphan Valberg, Grétar Örn Hjartarson, Jóel Snær Garcia",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/HonnDJG/Academic-Reference-Manager/issues"
  },
  "homepage": "https://github.com/HonnDJG/Academic-Reference-Manager#readme",
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "express": "^4.17.1",
    "moment": "^2.24.0",
    "mongoose": "^5.7.7"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2"
  }
}
